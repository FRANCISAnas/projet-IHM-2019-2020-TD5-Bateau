<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_about_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9967A"
    android:orientation="horizontal">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fragment_about_us_textview1_MarginTop"
                android:gravity="center"
                android:text="@string/about_title"
                android:textColor="#000000"
                android:textSize="@dimen/fragment_about_us_textview1_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:text="@string/about_text"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/facebook"
                android:layout_width="48dp"
                android:layout_height="55dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="260dp"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/facebook" />


            <TextView
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fragment_about_us_textview3_MarginLeft"
                android:layout_marginTop="400dp"
                android:text="Facebook"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/twitter"
                android:layout_width="52dp"
                android:layout_height="64dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="360dp"
                app:srcCompat="@drawable/twitter" />

            <ImageView
                android:id="@+id/gmail"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="440dp"
                android:layout_marginTop="260dp"
                app:srcCompat="@drawable/email" />

            <TextView
                android:layout_width="182dp"
                android:layout_height="28dp"
                android:layout_marginLeft="380dp"
                android:layout_marginTop="400dp"
                android:text="EMAIL"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/faq"
                android:layout_width="52dp"
                android:layout_height="31dp"
                android:layout_marginLeft="440dp"
                android:layout_marginTop="340dp"
                app:srcCompat="@drawable/faq" />

            <TextView
                android:layout_width="58dp"
                android:layout_height="73dp"
                android:layout_marginLeft="380dp"
                android:layout_marginTop="480dp"
                android:text="FAQ"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fragment_about_us_textview4_MarginLeft"
                android:layout_marginTop="480dp"
                android:text="Twitter"
                android:textColor="#000000"
                android:textSize="18sp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>