<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/addIncident"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_incidents_heightB"
        android:text="@string/add_incident" />

    <ListView
        android:id="@+id/myListView"
        android:layout_width="match_parent"

        android:layout_height="@dimen/activity_incidents_heightL">

    </ListView>

    <SearchView
        android:id="@+id/filter_incident"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_incidents_height"
        android:hint="filter" />


</LinearLayout>