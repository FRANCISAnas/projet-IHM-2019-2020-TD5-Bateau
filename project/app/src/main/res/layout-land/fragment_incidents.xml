<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:id="@+id/fragment_incidents"
    tools:context=".HomeActivity">


    <EditText
        android:id="@+id/incident_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notification Urgente"
        android:textSize="24sp"
        android:layout_marginTop="50dp"
        android:onClick="sendOnUrgent"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textSize="24sp"
        android:text="Notifier"
        android:onClick="sendOnClassic"/>

    <Button
        android:id="@+id/go_to_Incidents_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:hint="HOME"
        android:text="@string/home" />

</RelativeLayout>