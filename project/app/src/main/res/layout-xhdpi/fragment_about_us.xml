<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_about_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9967A"
    android:orientation="horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_about_us_textview1_MarginTop"
        android:gravity="center"
        android:text="@string/about_title"
        android:textColor="#000000"
        android:textSize="@dimen/fragment_about_us_textview1_text_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_about_us_textview2_MarginTop"
        android:gravity="center"
        android:text="@string/about_text"
        android:textColor="#000000"
        android:textSize="@dimen/fragment_about_us_textview2_text_size" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="60dp"
        android:layout_height="@dimen/fragment_about_us_image_1_height"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="390dp"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/facebook" />

    <TextView
        android:layout_width="@dimen/fragment_about_us_textview3_width"
        android:layout_height="@dimen/fragment_about_us_textview3_height"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="530dp"
        android:text="FACEBOOK"
        android:textColor="#000000"
        android:textSize="@dimen/fragment_about_us_textview3_text_size" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="40dp"
        android:layout_height="@dimen/fragment_about_us_image_2_height"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="590dp"
        app:srcCompat="@drawable/twitter" />

    <TextView
        android:layout_width="@dimen/fragment_about_us_textview4_width"
        android:layout_height="@dimen/fragment_about_us_textview4_height"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="730dp"
        android:text="TWITTER"
        android:textColor="#000000"
        android:textSize="@dimen/fragment_about_us_textview4_text_size" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="@dimen/fragment_about_us_image_3_width"
        android:layout_height="@dimen/fragment_about_us_image_3_height"
        android:layout_marginLeft="450dp"
        android:layout_marginTop="350dp"
        app:srcCompat="@drawable/email" />

    <TextView
        android:layout_width="@dimen/fragment_about_us_textview5_width"
        android:layout_height="@dimen/fragment_about_us_textview5_height"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="530dp"
        android:text="EMAIL"
        android:textColor="#000000"
        android:textSize="@dimen/fragment_about_us_textview5_text_size" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="@dimen/fragment_about_us_image_4_width"
        android:layout_height="@dimen/fragment_about_us_image_4_height"
        android:layout_marginLeft="450dp"
        android:layout_marginTop="550dp"
        app:srcCompat="@drawable/faq" />

    <TextView
        android:layout_width="@dimen/fragment_about_us_textview6_width"
        android:layout_height="@dimen/fragment_about_us_textview6_height"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="730dp"
        android:text="FAQ"
        android:textColor="#000000"
        android:textSize="@dimen/fragment_about_us_textview6_text_size" />


</RelativeLayout>