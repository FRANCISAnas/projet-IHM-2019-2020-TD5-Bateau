          android:textColor="#000000"
          android:layout_marginLeft="30dp"
          android:text="Facbook" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="400dp"
        android:layout_marginTop="650dp"
